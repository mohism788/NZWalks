@using NZWalks.UI.Models.DTO
@model NZWalks.UI.Models.DTO.AddWalkViewModel



<h1 class="mt-3">Add Walk</h1>

<form method="post">

	<div class="mt-3">
		<label class="form-label">Name</label>
		<input type="text" class="form-control" asp-for="Name"></input>
	</div>

	<div class="mt-3">
		<label class="form-label">Description</label>
		<input type="text" class="form-control" asp-for="Description"></input>
	</div>

	<div class="mt-3">
		<label class="form-label">Length (Km)</label>
		<input type="text" class="form-control" asp-for="LengthInKm"></input>
	</div>
	
	<div class="mt-3">
		<label class="form-label">Walk Image URL</label>
		<input type="text" class="form-control" asp-for="WalkImageUrl"></input>
	</div>

	<div class="mt-3">
		<label class="form-label">Difficulty</label>
		<input type="text" class="form-control" asp-for="DifficultyId"></input>

	</div>
	
	<div class="mt-3">
		<label class="form-label">Region</label>
		<input type="text" class="form-control" asp-for="RegionId"></input>
	</div>

	

	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>