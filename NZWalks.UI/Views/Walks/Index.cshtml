@model IEnumerable<NZWalks.UI.Models.DTO.WalkDto>
@{
}

<h1 class="mt-3">Walks</h1>
<div class="d-flux justify-content-end ">
    <a class="btn btn-secondary" asp-controller="Walks" asp-action="Add"> Add Walk</a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Length (Km)</th>
            <th>Difficulty</th>
            <th>Region</th>
            <th>Edit?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var walk in Model)
        {<tr>
            <td>@walk.Id</td>
                <td>@walk.Name</td>
                <td>@walk.Description</td>
                <td>@walk.LengthInKm</td>
                <td>@walk.Difficulty.Name</td>
                <td>@walk.Region.Name</td>
                <td>
                    <a asp-controller="Walks" asp-action="Edit" asp-route-id="@walk.Id" class="btn btn-light">Edit</a>
                </td>
        </tr>
            
        } 
    </tbody>
</table>
