@model NZWalks.UI.Models.DTO.UpdateWalkDto
@{
}

<h1 class="mt-3">Edit Walk</h1>

@if (Model != null)
{
	<form method="post">

		<div class="mt-3">
			<label class="form-label">Id</label>
			<input type="text" class="form-control" asp-for="Id" readonly></input>
		</div>

		<div class="mt-3">
			<label class="form-label">Name</label>
			<input type="text" class="form-control" asp-for="Name"></input>
		</div>

		<div class="mt-3">
			<label class="form-label">Description</label>
			<input type="text" class="form-control" asp-for="Description"></input>
		</div>

		<div class="mt-3">
			<label class="form-label">Length (km)</label>
			<input type="text" class="form-control" asp-for="LengthInKm"></input>
		</div>
		
		<div class="mt-3">
			<label class="form-label">Walk Image Url</label>
			<input type="text" class="form-control" asp-for="WalkImageUrl"></input>
		</div>

		<div class="mt-3">
		<label class="form-label">Difficulty</label>
		<input type="text" class="form-control" asp-for="DifficultyId"></input>

	</div>
	
	<div class="mt-3">
		<label class="form-label">Region</label>
		<input type="text" class="form-control" asp-for="RegionId"></input>
	</div>


		<div class="mt-3 d-flex justify-content-between">
			<button type="submit" class="btn btn-primary">Save</button>
			<button type="submit" asp-controller="Walks" asp-action="Delete"
					class="btn btn-danger">
				Delete
			</button>
		</div>
	</form>
}